<Window x:Class="WaitIndicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="clr-namespace:WaitIndicator"
        Title="Wait Indicator"
        Width="472"
        Height="184"
        mc:Ignorable="d">
    <Grid>
        <s:DotWaitIndicator Width="100"
                            Height="100"
                            Margin="20,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ShapesGap="15" />
        <s:SegmentWaitIndicator Width="100"
                                Height="100"
                                Margin="145,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                ShapeHeight="40" />
        <s:StickWaitIndicator Width="100"
                              Height="100"
                              Margin="273,10,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Shapes="20"
                              ShapesGap="30"
                              ShapeHeight="40"
                              Fill="Chocolate"
                              Duration="0:0:1.0"/>
    </Grid>
</Window>
