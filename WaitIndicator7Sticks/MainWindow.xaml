<Window x:Class="WaitIndicator7Sticks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WaitIndicator7Sticks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Wait Indicator Sticks"
        Width="620"
        Height="346"
        mc:Ignorable="d">
    <Grid>
        <local:WaitIndicator Width="100"
                             Height="100"
                             Margin="18,20,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             StickHeight="60"
                             Sticks="8"
                             SticksGap="50" />
        <local:WaitIndicator Width="100"
                             Height="100"
                             Margin="158,20,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Fill="Green"
                             StickHeight="40"
                             Sticks="30"
                             SticksGap="60" />
        <local:WaitIndicator Width="50"
                             Height="50"
                             Margin="290,20,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             StickHeight="40"
                             Sticks="20"
                             SticksGap="30" />
        <local:WaitIndicator Width="200"
                             Height="200"
                             Margin="374,20,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Fill="Chocolate"
                             StickHeight="9"
                             Sticks="90"
                             SticksGap="10" />
        <local:WaitIndicator Width="100"
                             Height="100"
                             Margin="18,145,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             StickHeight="70"
                             Sticks="30"
                             SticksGap="40">
            <local:WaitIndicator.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="Blue" />
                    <GradientStop Offset="1" Color="Red" />
                </LinearGradientBrush>
            </local:WaitIndicator.Fill>
        </local:WaitIndicator>
    </Grid>
</Window>
